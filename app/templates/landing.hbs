<div class="landing-container">

  <img src="assets/mammoth.png" class="landing-logo" alt="mammoth logo" />
  <h1 class="landing-header">Manage BIG problems in small bites.</h1>

  {{#link-to 'sessions.create'}}

    <form class="landin-sign-in" {{action 'authenticate' on= 'submit'}}>
      {{paper-text label="E-mail" type="email" value=model.username}}
      {{paper-text label="Password" type="password" value=model.password}}
      {{#paper-button classNames="md-primary" raised=true action="raisedButton"}}Log In{{/paper-button}}

    </form>

  {{/link-to}}

  {{#link-to 'users.create'}}
  {{#paper-button raised=true action="raisedButton"}}Not a member? Sign Up Now{{/paper-button}}

  {{/link-to}}
</div>
{{outlet}}
