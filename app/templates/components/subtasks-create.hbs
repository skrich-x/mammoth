<div class='subtask-create-container'>

  <form class="pure-form pure-form-stacked subtask-form" {{action "createSubtask" on="submit"}}>

    <fieldset>
      <legend>Enter Sub Tasks and Priority Here</legend>
        <ul class="subtask-list">
          {{#each model.subtasks as |subtask|}}
            <li>
              {{subtask.subtaskName}}
              {{subtask.subtaskDueDate}}
              <form>
              <button type="pure-button remove-button" {{action "removeSubtask" subtask}}><i class="fa fa-minus"></i></button>
            </form>
            </li>
          {{/each}}
          <li class="subtask-list-items">
              {{input type="text" placeholder="Subtask" value=subtaskName}}
              {{!-- <select id="Priority">
                <option>Low</option>
                <option>Normal</option>
                <option>High</option>
              </select> --}}

              <button class="pure-buttton button-main add-button" type="submit"><i class="fa fa-plus-circle"></i>
              </button>

          </li>

        </ul>

    </fieldset>


{{!--
    <button class="pure-button button-main" type="submit" name="button">Save</button> --}}

  </form>
{{full-calendar events=events}}

</div>
{{yield}}
