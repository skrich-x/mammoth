{{!-- {{app-header}} --}}
<div class="manage-container">
  <h1 class="manage-header">Manage with Mammoth</h1>
  <ul class="manage-list">
      {{#each model as |task|}}
      <li class="manage-list-item">
          <hr>
        <h2>{{task.taskName}}</h2>

        <h3>Project Due Date: {{task.dueDate}}</h3>

        <ul class="subtasks-list">
        <h6 class="manage-subtask-label">Subtasks</h6>
        {{#each task.subtasks as |subtask|}}
          <li class="manage-subtask">
            <input id="remember" type="checkbox">
            {{subtask.subtaskName}}
            {{subtask.subtaskDueDate}}
          </li>
        {{/each}}
        </ul>
        <button type="pure-button" class="delete-task" name="destroyTask" {{action "destroyTask"}}> Delete Task</button>
      </li>
      {{/each}}


  </ul>
</div>
{{yield}}
